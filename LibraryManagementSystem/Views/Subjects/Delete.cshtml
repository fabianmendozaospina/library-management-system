@model LibraryManagementSystem.Model.Subject

@{
    ViewData["Title"] = "Delete Subject";
}

<h2 class="my-4 text-danger">Delete Subject</h2>

<h4>Are you sure you want to delete this subject?</h4>

<div class="card mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.SubjectId</dd>

            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>
        </dl>
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.SubjectId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
