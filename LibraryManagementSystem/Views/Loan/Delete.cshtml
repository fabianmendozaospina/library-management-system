@using LibraryManagementSystem.Model
@model Loan

@{
    ViewData["Title"] = "Delete Loan";
}

<h2 class="my-4 text-danger">@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this Loan?</h3>

<div class="card mt-3 p-3">
    <dl class="row">
        <dt class="col-sm-3">Id:</dt>
        <dd class="col-sm-9">@Model.LoanId</dd>

        <dt class="col-sm-3">Reader:</dt>
        <dd class="col-sm-9">@Model?.Reader?.FullName</dd>

        <dt class="col-sm-3">Initial Date:</dt>
        <dd class="col-sm-9">@Model?.InitialDate</dd>

        <dt class="col-sm-3">Final Date:</dt>
        <dd class="col-sm-9">@Model?.FinalDate</dd>
    </dl>
</div>
<br />
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="LoanId" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@if (TempData["Error"] != null)
{
    <br />
    <p style="color: red">@TempData["Error"]</p>
}