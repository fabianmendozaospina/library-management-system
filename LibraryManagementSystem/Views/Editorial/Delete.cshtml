@model LibraryManagementSystem.Model.Editorial

@{
    ViewData["Title"] = "Delete Editorial";
}

<h2 class="my-4 text-danger">@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this editorial?</h3>

<div class="card mt-3 p-3">
    <dl class="row">
        <dt class="col-sm-3">Editorial Id</dt>
        <dd class="col-sm-9">@Model.EditorialId</dd>

        <dt class="col-sm-3">Editorial Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>
    </dl>
</div>
<br />
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="EditorialId" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@if (TempData["Error"] != null)
{
    <br />
    <p style="color: red">@TempData["Error"]</p>
}