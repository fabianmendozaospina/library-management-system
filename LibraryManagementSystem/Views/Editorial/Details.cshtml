@model LibraryManagementSystem.Model.Editorial
@{
    ViewData["Title"] = "Editorial Details";
}

<h2 class="my-4">@ViewData["Title"]</h2>

<div class="mb-3">
    <label class="form-label fw-bold">Editorial Id:</label>
    <div>@Model.EditorialId</div>
</div>

<div class="mb-3">
    <label class="form-label fw-bold">Editorial Name:</label>
    <div>@Model.Name</div>
</div>

@if(User.IsInRole("Librarian"))
{
    <a asp-action="Edit" asp-route-id="@Model.EditorialId" class="btn btn-primary">Edit</a>
}
<a asp-action="Index" class="btn btn-secondary">Back to List</a>

