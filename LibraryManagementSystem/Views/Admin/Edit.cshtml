@using LibraryManagementSystem.ViewModels
@model LibrarianViewModel

@{
    ViewData["Title"] = "Edit Librarian";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" maxlength="256" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" type="tel" maxlength="15" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>

        @if (TempData["Error"] != null)
        {
            <div class="text-danger mt-3">@TempData["Error"]</div>
        }

        @if (TempData["Success"] != null)
        {
            <div class="text-success mt-3">@TempData["Success"]</div>
        }
    </div>
</div>