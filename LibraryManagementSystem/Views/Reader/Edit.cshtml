@model LibraryManagementSystem.Model.Reader

@{
    ViewData["Title"] = "Edit Reader";
}

<h2>Edit Reader</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="ReaderId" />
    <div class="form-group">
        <label asp-for="CoreId"></label>
        <input asp-for="CoreId" class="form-control" />
        <span asp-validation-for="CoreId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BirthDay"></label>
        <input asp-for="BirthDay" type="date" class="form-control" />
        <span asp-validation-for="BirthDay" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
