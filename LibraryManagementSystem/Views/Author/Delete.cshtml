@using LibraryManagementSystem.Model
@model Author

@{
    ViewData["Title"] = "Delete Author";
}

<h2>Are you sure you want to delete this Author?</h2>

<div class="card mt-3 p-3">
    <dl class="row">
        <dt class="col-sm-3">Id:</dt>
        <dd class="col-sm-9">@Model.AuthorId</dd>

        <dt class="col-sm-3">First Name:</dt>
        <dd class="col-sm-9">@Model.FirstName</dd>

        <dt class="col-sm-3">Last Name:</dt>
        <dd class="col-sm-9">@Model.LastName</dd>

        <dt class="col-sm-3">Birth Date:</dt>
        <dd class="col-sm-9">@Model.BirthDate</dd>

        <dt class="col-sm-3">Date of Death:</dt>
        <dd class="col-sm-9">@Model.DateOfDeath</dd>

        <dt class="col-sm-3">Biography:</dt>
        <dd class="col-sm-9">@Model.Biography</dd>
    </dl>
</div>
<br />
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="AuthorId" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@if (TempData["Error"] != null)
{
    <br />
    <p style="color: red">@TempData["Error"]</p>
}